<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/huawei_fingerprint">
        <SwitchPreference
            android:defaultValue="false"
            android:key="key_huawei_fingerprint_gestures"
            android:title="@string/huawei_fingerprint_gestures" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/general_display">
        <SwitchPreference
            android:defaultValue="false"
            android:key="key_huawei_touchscreen_glove_mode"
            android:title="@string/huawei_touchscreen_glove_mode" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="key_huawei_no_hwcomposer"
            android:title="@string/huawei_graphic_issues_workaround" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/general_misc">
	    <ListPreference
		    android:defaultValue="-1"
		    android:entries="@array/pref_huawei_fast_charge"
		    android:entryValues="@array/pref_huawei_fast_charge_values"
		    android:key="key_huawei_fast_charge"
		    android:title="@string/huawei_fast_charge" />
    </PreferenceCategory>

</PreferenceScreen>
